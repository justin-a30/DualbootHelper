<?xml version="1.0" encoding="utf-8"?>
<dev.oneuiproject.oneui.layout.ToolbarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:expandable="true"
    app:expanded="false"
    app:subtitle="@string/description"
    app:title="@string/app_name"
    tools:context=".MainActivity"
    android:id="@+id/home">

    <androidx.core.widget.NestedScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?roundedCornerColor"
        app:layout_location="main_content"
        android:fillViewport="true"
        android:overScrollMode="always"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <dev.oneuiproject.oneui.widget.Separator
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info" />

            <dev.oneuiproject.oneui.widget.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/oui_background_color"
                android:orientation="vertical">
            
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="24dp"
                        android:paddingStart="24dp">

                        <ImageView
                            android:layout_width="wrap_content" 
                            android:layout_height="225dp"
                            android:src="@drawable/device"
                            android:adjustViewBounds="true"/>
                    
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
    
                        <dev.oneuiproject.oneui.widget.ui.widget.CardView
                            android:id="@+id/status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:TitleText="@string/slota_os"
                            app:SummaryText="@{statusstring}" />
    
                        <dev.oneuiproject.oneui.widget.ui.widget.CardView
                            android:id="@+id/slota_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:TitleText="@string/slota_os"
                            app:SummaryText="@{slotastring}"
                            app:isDividerViewVisible="true" />
    
                        <dev.oneuiproject.oneui.widget.ui.widget.CardView
                            android:id="@+id/slotb_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:TitleText="@string/slotb_os"
                            app:SummaryText="@{slotbstring}"
                            app:isDividerViewVisible="true" />
    
                    </LinearLayout>
                
                </LinearLayout>
                
            </dev.oneuiproject.oneui.widget.RoundLinearLayout>
        
            <dev.oneuiproject.oneui.widget.Separator
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qact" />
            
            <dev.oneuiproject.oneui.widget.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/oui_background_color"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp">

                <PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                                  xmlns:app="http://schemas.android.com/apk/res-auto">

                    <!-- Slot A Actions Dropdown -->
                    <DropDownPreference
                        android:key="slot_a_actions"
                        android:title="@string/slota_qact"
                        android:entries="@array/slota_entries"
                        android:entryValues="@array/slot_a_values"
                        android:defaultValue="@string/slota_placeholder"
                        android:id="@+id/slot_a_actions"
                        app:useSimpleSummaryProvider="true" />

                    <!-- Slot B Actions Dropdown -->
                    <DropDownPreference
                        android:key="slot_b_actions"
                        android:id="@+id/slot_b_actions"
                        android:title="@string/slotb_qact"
                        android:entries="@array/slotb_entries"
                        android:entryValues="@array/slot_b_values"
                        android:defaultValue="@string/slotb_placeholder"
                        app:useSimpleSummaryProvider="true" />

                    <!-- Misc Actions Dropdown -->
                    <DropDownPreference
                        android:key="misc_actions"
                        android:id="@+id/misc_actions"
                        android:title="@string/misc_qact"
                        android:entries="@array/misc_entries"
                        android:entryValues="@array/misc_values"
                        android:defaultValue="@string/misc_placeholder"
                        app:useSimpleSummaryProvider="true" />

                </PreferenceScreen>

            </dev.oneuiproject.oneui.widget.RoundLinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</dev.oneuiproject.oneui.layout.ToolbarLayout>
