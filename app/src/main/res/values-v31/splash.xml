<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OneUITheme" parent="Theme.SplashScreen">
        <!-- Theme attributes -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Background color -->
        <item name="android:windowSplashScreenBackground">@color/oui_background_color</item>
        <!-- Animated vector drawable icon -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/launcher_start</item>
        <!-- Animation duration (optional for Android 12, inferred in Android 13+) -->
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>
</resources>